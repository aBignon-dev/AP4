<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP4test.Views.AccueilDeconnecter.Accueil.AccueilDeconnecterView">
    <ContentPage.Content>

        <FlexLayout Direction="Column"
                    AlignItems="Center"
                    JustifyContent="SpaceEvenly">
            <Label FontSize="Large" Text="Accueil"></Label>
            <Button Command="{Binding CommandInscription }" Text="Inscription" BackgroundColor="MediumBlue"
                    TextColor="White" />
            <Button Command="{Binding CommandConnexion}" Text="Connexion" BackgroundColor="MediumBlue" BorderWidth="1"
                    TextColor="White" BorderColor="MediumBlue" />
            <Button Command="{Binding CommandInviter}" Text="Inviter" BackgroundColor="MediumBlue" BorderWidth="1"
                    TextColor="White" BorderColor="MediumBlue" />
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>