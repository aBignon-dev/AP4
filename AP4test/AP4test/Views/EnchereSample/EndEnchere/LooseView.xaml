<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP4test.Views.EnchereSample.EndEnchere.LooseView"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:AP4test.ViewModels.EnchereSample.EndEnchere;assembly=AP4test">

    <ContentPage.Content>
        <StackLayout x:DataType="local:LooseViewModel" Padding="20" Margin="20" HorizontalOptions="Center">
            <Label Text="{Binding RipText}" TextColor="DarkRed"/>
            <Label Text="{Binding NotWonText}" TextColor="DarkRed" />
            <Image
                Source="https://media3.giphy.com/media/Oj8pUuT5FOpxHH9LIk/giphy.gif"
                IsAnimationPlaying="True" />
            <Button Command="{Binding ButtonSuivant }" Text="{Binding ButtonSuivantText}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>